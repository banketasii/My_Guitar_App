<% include ./partials/header %>



<div class='ui main text container segment'>
  <div class='ui huge header'><%= guitar['title'] %></div>  
  <div class='ui top attached'>
    <div class='item'>
      <img class='ui centered rounded image' src="<%= guitar['image'] %>">  
      <div class='content'>
        <span><%= guitar['created'].toDateString() %></span> 
      </div>
      <div class='description'>
        <p><%= guitar['body'] %></p>
      </div>
      <a class='ui orange basic button' href='/guitars/<%= guitar["_id"] %>/edit'>Edit</a>
      <form id='delete' action='/guitars/<%= guitar["_id"] %>?_method=DELETE' method='POST'>
        <button class='ui red basic button'>Delete</button>
      </form>
    </div>
  </div>
</div>

<% include ./partials/footer %>